{
  "name": "vscodetranslate",
  "displayName": "VscodeTranslate",
  "description": "在 VS Code 中悬停翻译选中的文本，支持多行双语内容翻译,支持单行逐行翻译替换",
  "version": "0.0.1",
  "icon": "icon.png",
  "publisher": "hakureireimuyo",
  "repository": {
    "type": "git",
    "url": "https://github.com/hakureireimuyo/VScodeTranslate.git"
  },
  "homepage": "https://github.com/hakureireimuyo/VScodeTranslate",
  "bugs": {
    "url": "https://github.com/hakureireimuyo/VScodeTranslate/issues"
  },
  "license": "MIT",
  "keywords": [
    "translation",
    "hover",
    "ai",
    "dashscope",
    "qwen",
    "alibaba",
    "llm",
    "code-translate",
    "suggestion"
  ],
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "AI",
    "Programming Languages"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "文档悬浮翻译设置",
      "properties": {
        "VScodeTranslator.enabled": {
          "type": "boolean",
          "default": true,
          "description": "是否启用悬停翻译功能"
        },
        "VScodeTranslator.useWebviewPanel": {
          "type": "boolean",
          "default": false,
          "description": "是否使用独立的Webview面板显示翻译结果"
        },
        "VScodeTranslator.displayMode": {
          "type": "string",
          "default": "sidebyside",
          "enum": [
            "sidebyside",
            "translatedonly"
          ],
          "enumDescriptions": [
            "对照显示原文与译文",
            "仅显示译文"
          ],
          "description": "选择翻译内容的显示方式"
        },
        "VScodeTranslator.serviceProvider": {
          "type": "string",
          "default": "aliyun",
          "description": "选择翻译服务提供商",
          "enum": [
            "aliyun",
            "baidu",
            "openai",
            "zhipu",
            "local"
          ],
          "enumItemLabels": [
            "阿里百炼",
            "百度翻译",
            "OpenAI 兼容接口",
            "质谱清言",
            "本地大模型"
          ],
          "enumDescriptions": [
            "使用阿里云翻译服务",
            "使用百度翻译服务",
            "使用任何兼容 OpenAI API 的翻译服务",
            "使用质谱清言大模型服务",
            "使用本地部署的大模型服务"
          ],
          "order": 1
        },
        "VScodeTranslator.url": {
          "type": "string",
          "default": "",
          "description": "大模型 API 接口地址。一般留空，将根据选择的服务提供商使用默认地址.如果服务商修改了接口地址，可以在此处进行覆盖,或者使用本地服务或自建服务时可以使用自定义接口地址",
          "order": 2
        },
        "VScodeTranslator.apiKey": {
          "type": "string",
          "default": "",
          "description": "API 密钥",
          "order": 3
        },
        "VScodeTranslator.secretKey": {
          "type": "string",
          "default": "",
          "description": "某些服务商可能需要额外的密钥（如 Secret Key）",
          "order": 4
        },
        "VScodeTranslator.model": {
          "type": "string",
          "default": "",
          "description": "大模型名称。如果留空，将使用所选服务商的推荐模型,一般为免费或者价格最低的模型.",
          "order": 5
        },
        "VScodeTranslator.startupDelay": {
          "type": "number",
          "default": 3000,
          "description": "插件首次启动延迟时间（毫秒），该设置确保翻译内容始终在悬浮提示的最顶部显示，如果发现翻译结果在底部，则适当调整延迟时间",
          "order": 7
        }
      }
    },
    "hoverProviders": [
      {
        "access": "public"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "debug:text": "pnpm run compile && node out/debug/textProcessorDebug.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/sqlite3": "^5.1.0",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.36.0",
    "glob": "^11.0.3",
    "mocha": "^11.7.5",
    "typescript": "^5.9.3"
  }
}
