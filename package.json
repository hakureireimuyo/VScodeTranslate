{
  "name": "vscodetranslate",
  "displayName": "VscodeTranslate",
  "description": "在 VS Code 中悬停翻译选中的文本，支持多行双语内容翻译,支持单行逐行翻译替换",
  "version": "0.0.1",
  "icon": "icon.png",
  "publisher": "hakureireimuyo",
  "repository": {
    "type": "git",
    "url": "https://github.com/hakureireimuyo/VScodeTranslate.git"
  },
  "homepage": "https://github.com/hakureireimuyo/VScodeTranslate",
  "bugs": {
    "url": "https://github.com/hakureireimuyo/VScodeTranslate/issues"
  },
  "license": "MIT",
  "keywords": [
    "translation",
    "hover",
    "ai",
    "dashscope",
    "qwen",
    "alibaba",
    "llm",
    "code-translate",
    "suggestion"
  ],
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "AI",
    "Programming Languages"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "文档悬浮翻译设置",
      "properties": {
        "hoverTranslator.serviceProvider": {
          "type": "string",
          "default": "aliyun",
          "description": "选择翻译服务提供商",
          "enum": [
            "aliyun",
            "moonshot", 
            "openai",
            "local"
          ],
          "enumItemLabels": [
            "阿里百炼",
            "Moonshot",
            "OpenAI 兼容接口",
            "本地大模型"
          ],
          "enumDescriptions": [
            "使用阿里云百炼翻译服务",
            "使用 Moonshot 翻译服务",
            "使用任何兼容 OpenAI API 的翻译服务",
            "使用本地部署的大模型服务"
          ],
          "order": 1
        },
        "hoverTranslator.baseURL": {
          "type": "string",
          "default": "",
          "description": "大模型 API 接口地址。如果留空，将根据选择的服务提供商使用默认地址。实际调用地址：${baseURL}/chat/completions",
          "order": 2
        },
        "hoverTranslator.apiKey": {
          "type": "string",
          "default": "",
          "description": "API 密钥",
          "order": 3
        },
        "hoverTranslator.secretKey": {
          "type": "string",
          "default": "",
          "description": "某些服务商可能需要额外的密钥（如 Secret Key）",
          "order": 4
        },
        "hoverTranslator.model": {
          "type": "string",
          "default": "",
          "description": "大模型名称。如果留空，将使用所选服务商的推荐模型",
          "order": 5
        },
        "hoverTranslator.promptTemplate": {
          "type": "string",
          "default": "简短解释一下：${content}",
          "markdownDescription": "提示词模板，其中 `${content}` 表示原文内容占位符, 可自定义提示词来丰富和调整翻译效果",
          "order": 6
        },
        "hoverTranslator.startupDelay": {
          "type": "number",
          "default": 3000,
          "description": "插件首次启动延迟时间（毫秒），该设置确保翻译内容始终在悬浮提示的最顶部显示，如果发现翻译结果在底部，则适当调整延迟时间",
          "order": 7
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3"
  }
}
